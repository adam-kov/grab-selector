{
  "name": "Selector Grab",
  "description": "Extension to quickly grab the selector of an element",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["app.js"]
		}
	],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "action": {
    "default_title": "Selector Grab",
    "default_icon": "icon.png"
  }
}